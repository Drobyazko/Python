"""
Скласти програму переведення радіанної міри кута в градуси, хвилини і секунди.
Compile a program to translate the radial angle measure into degrees, minutes and seconds.
"""


def change():
    one = input("Enter what you want to change Minutes to Seconds enter (Time) if Angels Enter (Angel): ")
    if one == "Time":
        t = input("Enter Minutes: ")
        return main_for_T(t)
    elif one == "Angel":
        s = input("Enter Number: ")
        return main_for_S(s)
    else:
        return change()

def main_for_T(t):
    correct_t(t)
    y = t * 60
    answer_t = str(str(t) + "minutes = " + str(y) + "seconds")
    return answer_t

def main_for_S(s):
    correct_s(s)
    z = s * 180/3.14
    answer_s = str(str(s) + "rad = " + str(z) + "dig")
    return answer_s

def correct_s(s):
    if s.isdigit():
        return main_for_S(s)
    else:
        s = input("Change your enter: ")
        correct_s(s)

def correct_t(t):
    if t.isdigit():
        return main_for_T(t)
    else:
        t = input("Change your enter: ")
        correct_t(t)

def main():
     return change()

main()